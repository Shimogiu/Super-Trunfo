    printf("Código da Carta (ex: A01):");
    scanf(" %s", &codigo1);
    //Nome da Cidade
    printf("Nome da Cidade:");
    scanf(" %[^\n]", &nomecidade1);
    //População
    printf("População :");
    scanf(" %d", &populacao1);
    //Área em Km²
    printf("Área (em km²):");
