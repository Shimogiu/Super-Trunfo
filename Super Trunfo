    printf("PIB:");
    scanf(" %f", &pib1);
    //Numero de Pontos Turisticos
    printf("Numero de Pontos Turísticos:");
    scanf(" %d", &pontosTuristicos1);

    //lEITURA DE DADOS DA CARTA 2
